<odoo>
    <report
        id="report_hotel_revenue"
        model="hotel.reservation"
        string="Revenue Report"
        report_type="qweb-pdf"
        name="hotel_management.report_revenue"
        file="hotel_management.report_revenue"
    />

    <template id="report_revenue">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Hotel Revenue Report</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Guest Name</th>
                            <th>Room</th>
                            <th>Check-In</th>
                            <th>Check-Out</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="reservation">
                            <tr>
                                <td><t t-esc="reservation.guest_name"/></td>
                                <td><t t-esc="reservation.room_id.name"/></td>
                                <td><t t-esc="reservation.check_in_date"/></td>
                                <td><t t-esc="reservation.check_out_date"/></td>
                                <td><t t-esc="reservation.amount_total"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
