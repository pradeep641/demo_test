<odoo>
    <report
        id="report_hotel_occupancy"
        model="hotel.room"
        string="Occupancy Report"
        report_type="qweb-pdf"
        name="hotel_management.report_occupancy"
        file="hotel_management.report_occupancy"
    />

    <template id="report_occupancy">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Hotel Occupancy Report</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Room Type</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="room">
                            <tr>
                                <td><t t-esc="room.name"/></td>
                                <td><t t-esc="dict(room.fields_get()['room_type']['selection'])[room.room_type]"/></td>
                                <td><t t-esc="dict(room.fields_get()['status']['selection'])[room.status]"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
