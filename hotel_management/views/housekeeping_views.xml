<odoo>
    <!-- Tree View for Housekeeping Task -->
    <record id="view_housekeeping_task_tree" model="ir.ui.view">
        <field name="name">housekeeping.task.tree</field>
        <field name="model">housekeeping.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="room_id"/>
                <field name="task_type"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Action for Housekeeping Task -->
    <record id="action_housekeeping_task" model="ir.actions.act_window">
        <field name="name">Housekeeping</field>
        <field name="res_model">housekeeping.task</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
